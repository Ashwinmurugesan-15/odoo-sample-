<odoo>
    <record id="mail_plugin_custom_template" model="mail.template">
        <field name="name">Custom Plugin Template</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Custom Notification</field>
        <field name="email_from">{{ object.email_formatted }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hello <t t-out="object.name or ''">Partner</t>,
                    <br/><br/>
                    This is a custom notification sent from the Odoo Mail Plugin extension.
                    <br/><br/>
                    Regards,
                    <br/>
                    Odoo
                </p>
            </div>
        </field>
    </record>
</odoo>
